<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f5f7fa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:src="@drawable/logo"
        android:contentDescription="Logo do Aplicativo" />
        <!-- Cabeçalho -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculadora de Execução Penal"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:padding="16dp"
            android:background="#ffffff"
            android:elevation="4dp" />

        <!-- Tempo Total da Pena -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            android:padding="16dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tempo Total da Pena"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="12dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Anos"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="#f8f9fa" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Meses"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="#f8f9fa" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Dias"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="#f8f9fa" />
                </TableRow>

                <TableRow>
                    <EditText
                        android:id="@+id/etAnos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:text="2"
                        android:gravity="center"
                        android:padding="8dp" />
                    <EditText
                        android:id="@+id/etMeses"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:text="0"
                        android:gravity="center"
                        android:padding="8dp" />
                    <EditText
                        android:id="@+id/etDias"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:text="0"
                        android:gravity="center"
                        android:padding="8dp" />
                </TableRow>
            </TableLayout>

            <!-- Regime Inicial -->
            <Spinner
                android:id="@+id/spinnerRegime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp" />

            <!-- Tipo do Crime -->
            <Spinner
                android:id="@+id/spinnerTipoCrime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp" />

            <!-- Checkboxes -->
            <CheckBox
                android:id="@+id/cbReincidente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reincidente"
                android:layout_marginTop="12dp" />

            <CheckBox
                android:id="@+id/cbViolencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Violência ou Grave Ameaça"
                android:layout_marginTop="8dp" />

            <!-- Data de Início -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data de Início da Pena"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etDataInicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:text="08/10/2025" />

        </LinearLayout>

        <!-- Remição -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            android:padding="16dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remição"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="12dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dias Trabalhados"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="#f8f9fa" />
                </TableRow>

                <TableRow>
                    <EditText
                        android:id="@+id/etDiasTrabalhados"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="0"
                        android:gravity="center"
                        android:padding="8dp" />
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Horas de Estudo"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etHorasEstudo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="0" />

        </LinearLayout>

        <!-- Botão Calcular -->
        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="#3498db"
            android:textColor="#ffffff"
            android:layout_marginBottom="20dp"
            android:padding="12dp" />

        <!-- Resultados -->
        <LinearLayout
            android:id="@+id/llResultados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            android:padding="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Progressões e Benefícios"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="12dp" />

            <!-- Os resultados serão adicionados dinamicamente aqui -->

        </LinearLayout>

    </LinearLayout>
</ScrollView>